<Window x:Class="EVA_Gen.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:EVA_Gen.WPF.Views"
        xmlns:cmd="clr-namespace:EVA_Gen.WPF.Infrastructure.Commands" 
        xmlns:vm="clr-namespace:EVA_Gen.WPF.ViewModels"   
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Title="{Binding Path=Title}">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        
        <Grid.Resources>

        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Margin=" 10">

            <TextBlock DockPanel.Dock="Top" Text="Панели"/>

            <TreeView BorderThickness="1" ItemsSource="{Binding Panels}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <!--<TextBlock Text="{Binding Name}"></TextBlock>-->
                        <CheckBox Content="{Binding Name}"></CheckBox>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </DockPanel>



        <!--<Button Margin="10" Content="{Binding Panels}" >
            <Button.Command>
                <cmd:TestCommand></cmd:TestCommand>
            </Button.Command>
        </Button>-->
    </Grid>
</Window>
